<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.minime89.passbeam">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="io.github.minime89.passbeam.PassBeamApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Application">

        <!-- activities -->
        <activity
            android:name="io.github.minime89.passbeam.activities.SetupActivity"
            android:label="@string/setup_title"
            android:theme="@style/Setup" />
        <activity
            android:name="io.github.minime89.passbeam.activities.SettingsActivity"
            android:label="@string/settings_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.minime89.passbeam.activities.KeyboardLayoutActivity"
            android:label="@string/keyboard_layout_title"
            android:parentActivityName="io.github.minime89.passbeam.activities.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.minime89.passbeam.activities.SettingsActivity" />
        </activity>

        <!-- services -->
        <service
            android:name="io.github.minime89.passbeam.keyboard.DeviceWriter"
            android:exported="false" />
        <service
            android:name="io.github.minime89.passbeam.PassBeamService"
            android:exported="false" />

        <!-- receiver -->
        <receiver android:name="io.github.minime89.passbeam.hooks.BootListener">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
